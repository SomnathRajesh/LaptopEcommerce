@model LaptopSales.Models.Laptops
@{
    ViewData["Title"] = "Details";

}

<br />
<h2 class="text-info">Laptop Details</h2>
<form asp-action="Details" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>

        <div class="col-8">
            <div class="form-group row mb-3">
                <div class="col-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-5">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="Name" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group row mb-3">
                <div class="col-2">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Description" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group row mb-3">
                <div class="col-2">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Price" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
           @*  <div class="form-group row mb-3">
                <div class="col-2">
                    <label asp-for="Image"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Image" class="form-control" type="file" name="image" />
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div> *@
            <div class="form-group row mb-3">
                <div class="col-2">
                    <label asp-for="LaptopColor"></label>
                </div>
                <div class="col-5">
                    <input asp-for="LaptopColor" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="LaptopColor" class="text-danger"></span>
            </div>
            <div class="form-group row mb-3">
                <div class="col-2">
                    <label asp-for="LaptopTypes.LaptopType"></label>
                </div>
                <div class="col-5">
                    @* <select asp-for="LaptopTypeId" asp-items="ViewBag.laptopTypeId" class="form-control"></select> *@
                     <input asp-for="LaptopTypes.LaptopType" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="LaptopTypes.LaptopType" class="text-danger"></span>
            </div>
            <div class="form-group row mb-3">
                <div class="col-2">
                    <label asp-for="Tags.TagName"></label>
                </div>
                <div class="col-5">
                   @*  <select asp-for="TagId" asp-items="ViewBag.tagId" class="form-control"></select> *@
                     <input asp-for="Tags.TagName" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Tags.TagName" class="text-danger"></span>
            </div>
            <div class="form-group row mb-3">
                <div class="col-2">
                    <label asp-for="IsAvailable"></label>
                </div>
                <div class="col-5">
                    <input asp-for="IsAvailable" readonly="readonly" type="checkbox" />
                </div>
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a type="button" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-success">Back To List</a>
            </div>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <img src="~/@Model.Image" width="100%" style="border-radius:5px;border:1px solid #efefef" />
        </div>


    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}





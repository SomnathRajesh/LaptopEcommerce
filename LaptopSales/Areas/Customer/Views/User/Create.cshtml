@model LaptopSales.Models.ApplicationUser
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Create your account</h2>
<form asp-action="Create" method="post" id="userform" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <h3>@ViewBag.message</h3>
         <hr />
        <div class="form-group row mb-3">
            <div class="col-2">
                <label asp-for="UserName">User Name(Email)</label>
            </div>
            <div class="col-5">
                <input asp-for="UserName" required class="form-control" />
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group row mb-3">
            <div class="col-2">
                <label asp-for="PasswordHash">Password</label>
            </div>
            <div class="col-5">
                <input asp-for="PasswordHash" required class="form-control" type="password"/>
            </div>
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>

        <div class="form-group row mb-3">
            <div class="col-2">
                <label asp-for="FirstName">First Name</label>
            </div>
            <div class="col-5">
                <input asp-for="FirstName" class="form-control" />
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row mb-3">
            <div class="col-2">
                <label asp-for="LastName">Last Name</label>
            </div>
            <div class="col-5">
                <input asp-for="LastName" class="form-control" />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a asp-action="Index" class="btn btn-success">Back To List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            console.log("Validation script executed");
                console.log("Form selected: ", $("#userform").length);
            $("#userform").validate({
                rules: {
                    UserName: {
                        required: true
                    },
                    PasswordHash: {
                        required: true
                    }
                }, messages: {
                    UserName: "Enter your email",
                    PasswordHash: "Enter your password"
                }
            });


        });
    </script>
}




